{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vitest/globals", "node", "@intlify/unplugin-vue-i18n/messages"]
  },
  "exclude": ["node_modules"],
  "include": ["vite.config.ts", "rsbuild.config.ts", "build/**/*.ts", "scripts/**/*.ts", "types"]
}
