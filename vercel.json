{
  "github": {
    "silent": true
  },
  "buildCommand": "pnpm run build:serverless",
  "env": {
    "IS_SERVERLESS": "true"
  },
  "rewrites": [{ "source": "/:path*", "destination": "/index.html" }],
  "headers": [
    {
      "source": "/thumbnail/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=31536000, immutable"
        }
      ]
    }
  ],
  "framework": "vite"
}
